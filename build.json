{
  "defaultTarget": "quickswf",

  "properties": {
    "docsDir": "docs",
    "vendorDir": "vendor",
    "binDir": "bin"
  },

  "resources": {
    "ZLib": {
      "type": "remote",
      "location": "git",
      "url": "git://github.com/imaya/zlib.js.git",
      "branch": "develop",
      "root": "bin",
      "files": [
        "inflate.min.js"
      ]
    },

    "Breader": {
      "type": "package",
      "location": "git",
      "url": "git://github.com/Moncader/Breader.git",
      "targets": ["all"]
    },

    "Cues": {
      "type": "package",
      "location": "git",
      "url": "git://github.com/BenriJS/Cues.git",
      "targets": ["all"]
    }
  },

  "targets": {
    "quickswf": {
      "builder": "js",
      "compilationLevel": "WHITESPACE_ONLY",
      "outputs": "${binDir}/quickswf.js",
      "resources": [
        {
          "type": "reference",
          "name": "ZLib"
        },

        {
          "type": "reference",
          "name": "Breader"
        },

        {
          "type": "reference",
          "name": "Cues"
        },

        {
          "type": "files",
          "root": "src",
          "include": ".+\\.js"
        }
      ]
    }
  }
}
